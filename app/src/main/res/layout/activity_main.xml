<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <!-- ================BREAK && CONTINUE============= -->
                    <TextView
                        android:id="@+id/textViewBreak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="20sp"
                        android:layout_marginTop="25sp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="10dp"
                        />

                    <TextView
                        android:id="@+id/textViewContinue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="20sp"

                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="10dp"
                        />

                    <Button
                        android:id="@+id/buttonBreak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BREAK BUTTON"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        />
                    <Button
                        android:id="@+id/buttonContinue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CONTINUE BUTTON"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        />

            <!-- ================ ADD ============= -->
                    <TextView
                        android:id="@+id/textViewADD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="20sp"

                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="10dp"
                        tools:ignore="DuplicateIds" />
                    <Button
                        android:id="@+id/buttonAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ADD BUTTON"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        />


            <!-- ================ নামতা ============= -->

                    <Button
                        android:id="@+id/buttonনামতা"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="নামতা BUTTON"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        />
                    <EditText
                        android:id="@+id/editTextনামতা"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="নামতা"
                        android:inputType="number"

                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:paddingLeft="10dp"
                        />

                    <TextView
                        android:id="@+id/textViewনামতা"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="10dp"
                        />

            <!-- ================ FACTORIAL ============= -->

            <Button
                android:id="@+id/buttonFactorial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FACTORIAL BUTTON"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                />
            <EditText
                android:id="@+id/editTextFactorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="factorial"
                android:inputType="number"

                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingLeft="10dp"
                />

            <TextView
                android:id="@+id/textViewFactorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                />




        </LinearLayout>

    </ScrollView>

</LinearLayout>